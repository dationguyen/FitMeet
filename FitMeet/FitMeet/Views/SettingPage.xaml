<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FitMeet.Views.SettingPage"
             xmlns:mvvm="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             mvvm:ViewModelLocator.AutowireViewModel="True" 
             Title="Setting"
             NavigationPage.HasBackButton="True">
    <ContentPage.Content>
        <Grid BackgroundColor="{StaticResource NavBackgroundColor}">
            <StackLayout Margin="0,20" VerticalOptions="Start" BackgroundColor="{StaticResource NavBackgroundColor}" Spacing="1">
                <StackLayout.Resources>
                    <ResourceDictionary>
                        <Style TargetType="Grid">
                            <Setter Property="Padding" Value="16,8"></Setter>
                            <Setter Property="BackgroundColor" Value="White"></Setter>
                        </Style>
                        <Style TargetType="Label">
                            <Setter Property="VerticalTextAlignment" Value="Center"></Setter>
                            <Setter Property="FontSize" Value="Small"></Setter>
                        </Style>
                    </ResourceDictionary>
                </StackLayout.Resources>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="60"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Label Text="Message Notification"></Label>
                    <Switch Grid.Column="1" ></Switch>
                </Grid>
                <Grid >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="60"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Label Text="Voice"></Label>
                    <Switch Grid.Column="1"></Switch>
                </Grid>
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="60"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Label Text="Vibrate"></Label>
                    <Switch Grid.Column="1"  ></Switch>
                </Grid>
                <Grid Margin="0,10,0,20" HeightRequest="40">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="60"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Label Text="Connect With Facebook"></Label>
                    <Image Source="facebook_logo" Grid.Column="1" HeightRequest="36" VerticalOptions="Center"></Image>
                </Grid>
                
                <Button Text="Change Password" BackgroundColor="White" TextColor="{StaticResource BodyColor}"
                        HeightRequest="48" ></Button>
                <Button Text="Delete Account" BackgroundColor="White" TextColor="{StaticResource RedColor}"
                        HeightRequest="48" Margin="0,10,0,10"></Button>
                <Button Text="Blocked Users" BackgroundColor="White" TextColor="{StaticResource RedColor}" 
                        HeightRequest="48" Margin="0,0"></Button>
            </StackLayout>
        </Grid>
    </ContentPage.Content>

</ContentPage>