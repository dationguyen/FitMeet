<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FitMeet.Views.MemberDetailPage"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms" 
             prism:ViewModelLocator.AutowireViewModel="True" Title="Member">
	<ContentPage.Content>
		<ScrollView>
			<StackLayout>
				<Image Source="{Binding UserPhoto}" HorizontalOptions="Center" Margin="0,20" />
				<Label Text="{Binding UserName}" Margin="0,10"></Label>
				<Grid HeightRequest="0.5" BackgroundColor="{StaticResource BorderColor}"></Grid>
			</StackLayout>
		</ScrollView>
	</ContentPage.Content>
</ContentPage>